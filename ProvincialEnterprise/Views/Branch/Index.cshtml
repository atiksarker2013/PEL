@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}



<div ng-app="branchApp">
    <div ng-controller="branchCtrl">
        <p class="divHead"></p>
        <div class="form-horizontal">
            <div align="center" style="color:royalblue"><h4><b>Branch</b></h4></div>
            @*<b><i>{{Action}} Branch</i></b>*@
            <div class="form-group">
                <input type="hidden" ng-model="branchId" />
                <label class="col-sm-4 control-label">Company</label>
                <div class="col-sm-6">
                    <select class="form-control" ng-model="companyId" ng-options="c.CompanyId as c.Name for c in companies" ng-change="getAllBranchesByCompany()">
                        <option value="">-- Select Company --</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-4 control-label">Branch Name</label>
                <div class="col-sm-6">
                    <input class="form-control" type="text" ng-model="name" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-4 control-label">Address</label>
                <div class="col-sm-6">
                    <textarea class="form-control" ng-model="address"></textarea>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-4 control-label">Contact</label>
                <div class="col-sm-6">
                    <input class="form-control" type="text" ng-model="contact" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-4 control-label"></label>
                <div class="col-sm-6">
                    <button type="submit" class="btn btn-primary" ng-click="addUpdateBranch()"><span class="glyphicon glyphicon-save"></span>&nbsp;Save</button>
                    <input type="button" class="btn btn-danger" value="Clear" ng-click="Cancel()" />
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Contact</th>
                        <th>Company</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tr ng-repeat="branch in branches">

                    <td>
                        {{branch.Name}}
                    </td>
                    <td>
                        {{branch.Address}}
                    </td>
                    <td>
                        {{branch.Contact}}
                    </td>
                    <td>
                        {{branch.CompanyName}}
                    </td>
                    <td>
                        <a href="" ng-click="editBranch(branch)" title="Edit"><span class="glyphicon glyphicon-pencil"></span></a>&nbsp;&nbsp;
                        <a href="" ng-click="deleteBranch(branch)" title=" delete"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>