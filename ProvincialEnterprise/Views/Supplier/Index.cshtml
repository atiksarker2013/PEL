
@{
    //ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<div ng-app="suppApp">
    <div ng-controller="suppCtrl">
        <p class="divHead"></p>
        <div class="form-horizontal">
            <div align="center" style="color:royalblue"><h4><b>Supplier</b></h4></div>
            @*<b><i>{{Action}} Supplier</i></b>*@
            <div class="form-group">
                <input type="hidden" ng-model="supplierId" />
            </div>
            <div class="container">
                <div class="form-horizontal form-custom">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Company</label>
                        <div class="col-sm-8">
                            <select class="form-control" ng-model="companyId" ng-options="c.CompanyId as c.Name for c in companies" ng-change="getAllBranchesByCompany(); getSuppliers()">
                                <option value="">-- Select Company --</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Branch</label>
                        <div class="col-sm-8">
                            <select class="form-control" ng-model="branchId" ng-options="c.BranchId as c.Name for c in branches" ng-change="getSuppliers()">
                                <option value="">-- Select Branch --</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Supplier Code</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" ng-model="supplierCode" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-3">
                            <input class="form-control" type="text" ng-model="name" />
                        </div>
                        <label class="col-sm-2 control-label">Address </label>
                        <div class="col-sm-3">
                            <input class="form-control" type="text" ng-model="address" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Owner Name</label>
                        <div class="col-sm-3">
                            <input class="form-control" type="text" ng-model="ownerName" />
                        </div>
                        <label class="col-sm-2 control-label">Contact </label>
                        <div class="col-sm-3">
                            <input class="form-control" type="text" ng-model="contact" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Email</label>
                        <div class="col-sm-3">
                            <input class="form-control" type="text" ng-model="email" />
                        </div>
                        <label class="col-sm-2 control-label">Fax </label>
                        <div class="col-sm-3">
                            <input class="form-control" type="text" ng-model="fax" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label"></label>
                        <div class="col-sm-6">
                            <button type="submit" class="btn btn-primary" ng-click="addUpdateSupplier()"><span class="glyphicon glyphicon-save"></span>&nbsp;Save</button>
                            <input type="button" class="btn btn-danger" value="Clear" ng-click="Cancel()" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                @*<div class="form-inline">
                        <div class="form-group">
                            <label>Search</label>
                            <input type="text" ng-model="search" class="form-control" placeholder="Search" />
                        </div>
                    </div>*@
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Supplier Code</th>
                            <th>Address</th>
                            <th>Contact</th>
                            <th>Owner Name</th>
                            <th>Fax</th>
                            <th>Email</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tr ng-repeat="supplier in suppliers">
                        <td>{{supplier.Name}}</td>
                        <td>{{supplier.SupplierCode}}</td>
                        <td>{{supplier.Address}}</td>
                        <td>{{supplier.Contact}}</td>
                        <td>{{supplier.OwnerName}}</td>
                        <td>{{supplier.Fax}}</td>
                        <td>{{supplier.Email}}</td>
                        <td>
                            <a href="" ng-click="editSupplier(supplier)" title="Edit"><span class="glyphicon glyphicon-pencil"></span></a>&nbsp;&nbsp;
                            <a href="" ng-click="deleteSupplier(supplier)" title=" delete"><span class="glyphicon glyphicon-trash"></span></a>
                        </td>
                    </tr>
                </table>
                @*<dir-pagination-controls max-size="5"
                                             direction-links="true"
                                             boundary-links="true">
                    </dir-pagination-controls>*@
            </div>
        </div>
    </div>
</div>


