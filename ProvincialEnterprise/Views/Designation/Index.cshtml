
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<div ng-app="desigApp">
    <div ng-controller="desigCtrl">
        <p class="divHead"></p>
        <div class="form-horizontal">
            <div align="center" style="color:royalblue"><h4><b>Designation</b></h4></div>
           @* <b><i>{{Action}} Designation</i></b>*@
            <div class="form-group">
                <label class="col-sm-4 control-label">Company</label>
                <div class="col-sm-6">
                    <select class="form-control" ng-model="companyId" ng-options="c.CompanyId as c.Name for c in companies" ng-change="getAllBranchesByCompany(); getAllDesignations()">
                        <option value="">-- Select Company --</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <input type="hidden" ng-model="sectionId" />
                <label class="col-sm-4 control-label">Branch</label>
                <div class="col-sm-6">
                    <select class="form-control" ng-model="branchId" data-ng-disabled="!branches" ng-options="b.BranchId as b.Name for b in branches" ng-change="getAllSectionsByBranch(); getAllDesignations()" >
                        <option value="">-- Select Branch --</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <input type="hidden" ng-model="designationId" />
                <label class="col-sm-4 control-label">Section</label>
                <div class="col-sm-6">
                    <select class="form-control" ng-model="sectionId" data-ng-disabled="!sections" ng-options="c.SectionId as c.Name for c in sections" ng-change="getAllDesignations()">
                        <option value="">-- Select Section --</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-4 control-label">Designation</label>
                <div class="col-sm-6">
                    <input class="form-control" type="text" ng-model="name" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-4 control-label"></label>
                <div class="col-sm-6">
                    <button type="submit" class="btn btn-primary" ng-click="addUpdateDesignation()"><span class="glyphicon glyphicon-save"></span>&nbsp;Save</button>
                    <input type="button" class="btn btn-danger" value="Clear" ng-click="Cancel()" />
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Section</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tr ng-repeat="designation in designations">

                    <td>
                        {{designation.Name}}
                    </td>
                    <td>
                        {{designation.SectionName}}
                    </td>
                    <td>
                        <a href="" ng-click="editDesignation(designation)" title="Edit"><span class="glyphicon glyphicon-pencil"></span></a>&nbsp;&nbsp;
                        <a href="" ng-click="deleteDesignation(designation)" title=" delete"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            </table>
            @*<dir-pagination-controls max-size="5"
                                     direction-links="true"
                                     boundary-links="true">
            </dir-pagination-controls>*@
        </div>
    </div>
</div>

